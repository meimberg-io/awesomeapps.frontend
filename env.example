# Environment Variables Example
# Copy this to .env for local development

# Application
NODE_ENV=development
APP_PORT=8203

# Next.js Public Variables (accessible in browser)
# For Docker: Use host.docker.internal to access host services from container
# For local npm dev: Use localhost
# For production: Use actual domain URLs
NEXT_PUBLIC_STRAPI_BASEURL=http://host.docker.internal:8202
NEXT_PUBLIC_APP_BASEURL=http://localhost:8203

# Matomo Analytics (optional)
NEXT_PUBLIC_MATOMO_TRACKER=false

# Revalidation Secret for API routes
REVALIDATE_SECRET=your-secret-token-here

# Development specific
DEBUG=true
LOG_LEVEL=debug

